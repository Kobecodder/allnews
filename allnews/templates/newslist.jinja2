{% extends "index.jinja2" %}
{% block newslist %}

    <div class="row">
        <div class="large-1 columns hide-for-small"></div>
        <div class="large-10 small-12 columns">
            <div class="row">
                <div class="large-12 columns ">
                   <dl class="sub-nav show-for-large-only">
                       <dd><a class="" href="/">প্রচ্ছদ</a></dd>
                       <dd> <a class="" href="/category/bangladesh">বাংলাদেশ</a></dd>
                       <dd><a class="" href="/category/international">আন্তর্জাতিক</a></dd>
                       <dd><a class="" href="/category/economy">অর্থনীতি</a></dd>
                       <dd><a class="" href="/category/sports">খেলা</a></dd>
                       <dd><a class="" href="/category/technology">বিজ্ঞান ও প্রযুক্তি</a></dd>
                       <dd><a class="" href="/category/politics">রাজনীতি</a></dd>
                       <dd><a class="" href="/category/entertainment">বিনোদন</a></dd>
                       <dd><a class="" href="/category/life_style">জীবনযাপন</a></dd>
                       <dd ><a href="#">সর্বাধিক পঠিত</a></dd>

                   </dl>

                </div>


            </div>

            {% for news in newsset %}
                <div class="row">
                    <div class="large-2 columns small-3">

                        {% if news.image_url %}
                            <img src="{{ news.image_url }}"/>
                        {% else %}
                            <img src="{{ request.static_url('allnews:static/image/news_defaut.png')}}"/>
                        {% endif %}
                    </div>
                    <div class="large-10 columns">
                        <h4 class="heading"><a href="{{ news.detail_url}}">{{ news.title }}</a></h4>
                        <p>{{ news.description }} <a class=" secondary" href="{{ news.detail_url }}">--></a></p>
                        <ul class="inline-list">
                            <li class="radius info label"><a href="#"><strong>source:{{ news.source}}</strong></a></li>
                            <li  class="radius info label"><a href="">{{ news.created.strftime('%Y-%m-%d') }}</a></li>
                        </ul>
                    </div>
                </div>
                <hr/>
            {% endfor %}
            <div class="pagination-centered">
                <ul class="pagination" aria-label="Pagination">
                    {#                <li class="arrow unavailable"><a href="">&laquo; Previous</a></li>#}
                    {% if pager %}
                        {% for key, value in pager.items() %}
                            <li><a href="?next_page={{ key }}">{{ key }}</a></li>
                        {% endfor %}
                    {% endif %}
                    {#                <li class="arrow"><a href="">Next &raquo;</a></li>#}
                </ul>
            </div>

        </div>
        <div class="large-1 columns hide-for-small"></div>

    </div>
{% endblock %}